  "iso_7637_2": {
    "title": "Road vehicles - Electrical disturbances from conduction and coupling",
    "subtitle": "Part 2: Electrical transient conduction along supply lines only",
    "scope": "Conducted transient immunity on power supply",
    "test_pulses": [
      {
        "pulse": "1",
        "description": "Disconnection of inductors in parallel with DUT",
        "voltage_range_v": [-150, -100],
        "rise_time_us": 1,
        "duration_ms": 2,
        "source_impedance_ohm": 10
      },
      {
        "pulse": "2a",
        "description": "Sudden interruption of supply current (DUT stopped)",
        "voltage_range_v": [50, 100],
        "rise_time_us": 1,
        "duration_us": 50,
        "repetition": "0.5 - 5 Hz"
      },
      {
        "pulse": "2b",
        "description": "Sudden interruption of supply current (DUT operating)",
        "voltage_range_v": [10, 35],
        "rise_time_us": 1,
        "duration_us": 200,
        "repetition": "0.5 - 5 Hz"
      },
      {
        "pulse": "3a",
        "description": "Switching transients (negative)",
        "voltage_range_v": [-150, -40],
        "rise_time_ns": 5,
        "duration_ns": 100,
        "repetition": "Burst of 100"
      },
      {
        "pulse": "3b",
        "description": "Switching transients (positive)",
        "voltage_range_v": [40, 150],
        "rise_time_ns": 5,
        "duration_ns": 100,
        "repetition": "Burst of 100"
      },
      {
        "pulse": "4",
        "description": "Starting profile - voltage reduction",
        "notes": "Battery voltage drops during engine cranking",
        "12v_system": {"min_v": 4.5, "max_v": 6, "duration_s": 15},
        "24v_system": {"min_v": 9, "max_v": 12, "duration_s": 15}
      },
      {
        "pulse": "5a",
        "description": "Load dump (unsuppressed)",
        "voltage_range_v": [65, 120],
        "rise_time_us": 10,
        "duration_ms": [40, 400]
      },
      {
        "pulse": "5b",
        "description": "Load dump (suppressed)",
        "voltage_range_v": [27, 35],
        "rise_time_us": 10,
        "duration_ms": [100, 350]
      }
